@model List<User>

@{
    ViewBag.Title = "Search Users";
}

<h2>Search Users</h2>

<form method="get" action="@Url.Action("Search", "User")">
    <input type="text" name="query" placeholder="Search by name" />
    <button type="submit">Search</button>
</form>

@if (Model != null && Model.Any())
{
    <ul>
        @foreach (var user in Model)
        {
            <li>@user.Name</li>
        }
    </ul>
}
else
{
    <p>No users found.</p>
}